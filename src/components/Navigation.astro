---
const githubLink = "https://github.com/SpikePuppet";
const linkedInLink = "https://www.linkedin.com/in/rhysjohns/";
const rssLink = `${Astro.site}rss.xml`;
---

<style>
  /* Use the CSS variables defined in your global.css */
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;

    /* Center the header and give it a max-width */
    width: 60vw;
    margin: 0 auto;
    padding: 1.5rem 1rem; /* Padding for vertical spacing inside the header */

    /* The 'Minimalist Underline' */
    border-bottom: 1px solid var(--border-subtle, #475569);
  }

  .site-title a {
    color: var(--text-headings, #F1F5F9);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .nav-group {
    display: flex;
    align-items: center;
    gap: 1.5rem; /* Adjust spacing between links and icons */
  }

  .nav-links {
    /* MODIFICATION: Add flex and gap to space out "Home" and "About" */
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text-primary, #CBD5E1);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease-in-out;
  }
  
  .social-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Style all links in the header on hover */
  .nav-group a:hover {
    color: var(--accent, #FBBF24);
  }
</style>

<header>
  <div class="site-title">
    <a href="/">Rhys' Ramblings</a>
  </div>

  <div class="nav-group">
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/about/">About</a>
    </nav>
    <div class="social-links">
      <a href={githubLink} aria-label="GitHub"><i class="fa-brands fa-github fa-2x"></i></a>
      <a href={linkedInLink} aria-label="LinkedIn"><i class="fa-brands fa-linkedin fa-2x"></i></a>
      <a href={rssLink} aria-label="RSS Feed"><i class="fa-solid fa-square-rss fa-2x"></i></a>
    </div>
  </div>
</header>