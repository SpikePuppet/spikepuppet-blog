---
import '../styles/global.css'

const githubLink = "https://github.com/SpikePuppet";
const linkedInLink = "https://www.linkedin.com/in/rhysjohns/";
const rssLink = `${Astro.site}rss.xml`;
---

<style>
  /* Use the CSS variables defined in your global.css */
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;

    /* Center the header and give it a max-width */
    width: 60vw;
    margin: 0 auto;
    padding: 1.5rem 1rem; /* Padding for vertical spacing inside the header */

    /* The 'Minimalist Underline' */
    border-bottom: 1px solid var(--border-subtle, #475569);
  }

  .site-title a {
    color: var(--text-headings, #F1F5F9);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .nav-group {
    display: flex;
    align-items: center;
    gap: 1.5rem; /* Adjust spacing between links and icons */
  }

  .nav-links {
    /* MODIFICATION: Add flex and gap to space out "Home" and "About" */
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text-primary, #CBD5E1);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease-in-out;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Style all links in the header on hover */
  .nav-group a:hover {
    color: var(--accent, #FBBF24);
  }

  .nav-divider {
    display: none; /* Hidden on desktop */
  }

  /* Mobile and tablet responsive styles */
  @media (max-width: 768px) {
    header {
      width: calc(100vw - 2rem); /* Full width with 1rem margin on each side */
      flex-direction: column;
      align-items: center;
      padding: 1.5rem 0;
      gap: 0;
      border-bottom: none; /* Remove the header border on mobile */
    }

    .site-title {
      width: 100%;
      text-align: center;
      padding-bottom: 1rem;
    }

    .site-title a {
      font-size: 1.5rem; /* Increase size on mobile */
    }

    .nav-group {
      width: 100%;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding-bottom: 1rem;
    }

    .nav-links {
      flex-direction: row;
      gap: 1.5rem;
      justify-content: center;
    }

    .social-links {
      gap: 1.5rem;
      justify-content: center;
    }

    .nav-divider {
      display: block;
      width: 100%;
      height: 1px;
      background-color: var(--border-subtle, #475569);
      margin: 0;
    }
  }

  /* Tablet-specific adjustments */
  @media (min-width: 769px) and (max-width: 1024px) {
    header {
      width: calc(100vw - 4rem); /* Full width with 2rem margin on each side */
    }
  }
</style>

<header>
  <div class="site-title">
    <a href="/">Rhys' Ramblings</a>
  </div>

  <div class="nav-group">
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/about/">About</a>
    </nav>
    <div class="social-links">
      <a href={githubLink}><i class="fa-brands fa-github fa-2x"></i></a>
      <a href={linkedInLink}><i class="fa-brands fa-linkedin fa-2x"></i></a>
      <a href={rssLink}><i class="fa-solid fa-square-rss fa-2x"></i></a>
    </div>
  </div>

  <div class="nav-divider"></div>
</header>

<script src="https://kit.fontawesome.com/b9cb6112ac.js" crossorigin="anonymous"></script>