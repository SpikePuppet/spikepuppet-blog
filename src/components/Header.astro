---
import '../styles/global.css'

const githubLink = "https://github.com/SpikePuppet";
const linkedInLink = "https://www.linkedin.com/in/rhysjohns/";
---
<!-- This should be the title and navigation bar -->
<style> 
    nav {
        width: 70vw;
        display: flex;
        justify-content: space-between;
        align-items: center;
        justify-items: center;
        margin: auto;
    }

    
    h1 {
        font-family: 'Fira Sans', sans-serif;
        font-size: 2rem;
        margin-left: 8px;
    }
    
    a {
        color: black;
        text-decoration: none;
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2rem;
    }
    
    .social-media {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        margin-right: 8px;
    }
    
    .links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 16px;
    }
</style>

<nav>
    <h1>Rhys' Train of Thought</h1>
    <div class="links">
        <a href="/">Home</a>
        <a href="/about">About</a>
    </div>
    <div class="social-media">
        <a href={githubLink}><i class="fa-brands fa-github fa-2x"></i></a>
        <a href={linkedInLink}><i class="fa-brands fa-linkedin fa-2x"></i></a>       
    </div>
</nav>

<script src="https://kit.fontawesome.com/b9cb6112ac.js" crossorigin="anonymous"></script>