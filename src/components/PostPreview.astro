---
const {title, publishDate, author, description, slug} = Astro.props;
---

<style>
    p {
        font-family: Montserrat;
    }

    time {
        font-family: Montserrat;
    }

    a {
        color: #1D1128;
        text-decoration: none;
        font-family: 'Fira Sans', sans-serif;
        font-size: 1.4rem;
        font-weight: bold;
    }
</style>

<li>
    <a href={`/posts/${slug}/`}>{title}</a>
    <p>{author}</p>
    <time>{new Date(publishDate).toLocaleString()}</time>
    <p>{description}</p>
</li>