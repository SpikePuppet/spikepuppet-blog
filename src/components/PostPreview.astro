---
const {title, publishDate, author, description, slug} = Astro.props;
---

<style>
    a {
        font-size: 1.5rem;
        font-family: 'Fira Sans', sans-serif;
    }

    p {
        font-size: 1rem;
        font-family: 'Montserrat', sans-serif;
    }

    li {
        width: 100%;
        padding: 16px;
        border: black 1px solid;
        border-radius: 16px;
        margin-top: 16px;
    }
    
    li:hover {
        transform: translate(-0.3em, -0.3em);
        box-shadow: 0.3em 0.3em 0 0 black;
        transition-duration: 0.2s;
    }
</style>

<li>
    <a href={`/posts/${slug}/`}>{title}</a>
    <p>{author}, <time datetime={publishDate}>{publishDate}</time></p>
    <p>{description}</p>
</li>