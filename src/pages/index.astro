---
import Header from "../components/Header.astro"
import Navigattion from "../components/Navigation.astro"
import Footer from "../components/Footer.astro"
import PostList from "../components/PostList.astro"

import type { MarkdownInstance } from "astro"

let posts: MarkdownInstance<Record<string, any>>[];
try {
	posts = (await Astro.glob("../posts/*.md")).filter((post) => post.frontmatter.title !== "About me");
} catch {
	posts = []
}

const blogPosts = posts
	.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf())
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> 
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Rhys' Ramblings</title>
	</head>
	<body>
		<Header />
		<Navigattion />
		<PostList posts={blogPosts} />
		<Footer />
	</body>
</html>
